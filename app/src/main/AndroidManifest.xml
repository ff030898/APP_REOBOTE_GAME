        android:icon="@mipmap/ic_icone2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icone2"
        android:supportsRtl="true"
        android:name=".helper.UserOnline"
        android:theme="@style/AppTheme3">
        <activity
            android:name=".ui.partida.RegrasActivity"
            android:theme="@style/AppTheme2"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~6300978111" />

        <activity
            android:name=".ui.blog.NewPostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.partida.CarregarPartidaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.partida.AmigosOnlineActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.partida.FinalizarPartidaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.editar_perfil.EditarPerfilActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.perfil.PerfilActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.visualizar_imagens.VisualizarImagemActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.amigos_profile.Amigos_PerfilActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.play_videos.PlayActivity"
            android:screenOrientation="landscape"
