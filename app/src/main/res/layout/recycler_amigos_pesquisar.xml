<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUsuarioPesquisar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/eu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtNomeUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="FabrÃ­cio Ferreira"
            android:textColor="@color/colorPreto"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btnSeguirUsuario"
            app:layout_constraintStart_toEndOf="@+id/imgUsuarioPesquisar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtRankingUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="RANKING: 6"
            android:textColor="@color/colorPreto"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/btnSeguirUsuario"
            app:layout_constraintStart_toEndOf="@+id/imgUsuarioPesquisar"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeUsuario" />

        <Button
            android:id="@+id/btnSeguirUsuario"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="SEGUIR"
            android:textColor="@color/colorBranco"
            android:background="@drawable/btn_screen"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>